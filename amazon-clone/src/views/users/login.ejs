<%- include('../partials/header') %>

<div class="auth-container">
  <h1>Sign In</h1>
  
  <% if (error) { %>
    <div class="error-message">
      <%= error %>
    </div>
  <% } %>
  
  <form action="/users/login" method="POST" class="auth-form" data-validate="true">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required data-error-message="Please enter a valid email address">
    </div>
    
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required data-error-message="Please enter your password">
    </div>
    
    <button type="submit">Sign In</button>
  </form>
  
  <div class="auth-links">
    <p>New to AmazonClone? <a href="/users/register">Create an account</a></p>
  </div>
</div>

<%- include('../partials/footer') %>