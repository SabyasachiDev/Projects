<%- include('../partials/header') %>

<div class="confirmation-container">
  <div class="confirmation-card">
    <div class="confirmation-icon">
      <i class="fas fa-check-circle"></i>
    </div>
    
    <h1>Order Confirmed!</h1>
    
    <p class="confirmation-message">Thank you for your purchase. Your order has been received and is being processed.</p>
    
    <div class="order-info">
      <p><strong>Order Number:</strong> <%= orderNumber %></p>
      <p><strong>Date:</strong> <%= new Date().toLocaleDateString() %></p>
    </div>
    
    <p class="confirmation-email">A confirmation email has been sent to <%= user.email %>.</p>
    
    <div class="confirmation-actions">
      <a href="/users/orders" class="btn">View Order</a>
      <a href="/products" class="btn btn-primary">Continue Shopping</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>